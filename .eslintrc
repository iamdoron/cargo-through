{
  "ecmaFeatures": {
    "modules": true
  },
  "parser": "babel-eslint",
  "env": {
    // I write for browser
    "browser": false,
    // in CommonJS
    "node": true
  },
  // To give you an idea how to override rule options:
  "rules": {
    "quotes": [0],
    "eol-last": [0],
    "new-cap": [0],
    "no-mixed-requires": [0],
    "no-script-url": [0],
    "no-use-before-define": [0],
    "no-underscore-dangle": [0],
    "no-unused-vars": [0],
    "consistent-return": [0]
  },
  "strict": [2, "never"],
  "plugins": [
  ]
}